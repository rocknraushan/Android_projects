<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".36" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn1Vert_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2Vert_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn3Vert_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75" />


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/display_background"
        android:backgroundTint="@color/accent3"
        android:elevation="2dp"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/gh1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="50sp"
            tools:ignore="LabelFor" />
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/transparent"
        android:elevation="6dp"
        android:text="√"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh2"
        app:layout_constraintEnd_toStartOf="@+id/btn1Vert_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gh1" />

    <Button
        android:id="@+id/btn_pi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/transparent"
        android:elevation="6dp"
        android:text="π"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh2"
        app:layout_constraintEnd_toStartOf="@+id/btn2Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn1Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh1" />

    <Button
        android:id="@+id/btn_exponent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/transparent"
        android:elevation="6dp"
        android:text="^"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh2"
        app:layout_constraintEnd_toStartOf="@+id/btn3Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn2Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh1" />

    <Button
        android:id="@+id/btn_fact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/transparent"
        android:elevation="6dp"
        android:text="!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn3Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh1" />

    <Button
        android:id="@+id/ac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#5A3B67"
        android:elevation="6dp"
        android:text="AC"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh3"
        app:layout_constraintEnd_toStartOf="@+id/btn1Vert_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gh2" />


    <Button
        android:id="@+id/brac1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent2"
        android:elevation="0dp"
        android:text="(  )"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh3"
        app:layout_constraintEnd_toStartOf="@+id/btn2Vert_guideline"
        app:layout_constraintStart_toStartOf="@+id/btn1Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh2" />


    <Button
        android:id="@+id/btn_percentr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent2"
        android:elevation="0dp"
        android:text="%"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh3"
        app:layout_constraintEnd_toStartOf="@+id/btn3Vert_guideline"
        app:layout_constraintStart_toStartOf="@+id/btn2Vert_guideline"

        app:layout_constraintTop_toBottomOf="@+id/gh2" />


    <Button
        android:id="@+id/dev"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent2"
        android:text="/"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn3Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh2" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh4"
        app:layout_constraintEnd_toEndOf="@id/btn1Vert_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gh3" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh4"
        app:layout_constraintEnd_toEndOf="@id/btn2Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn1Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh3" />


    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh4"
        app:layout_constraintEnd_toEndOf="@id/btn3Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn2Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh3" />


    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh5"
        app:layout_constraintEnd_toEndOf="@id/btn1Vert_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gh4" />


    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh5"
        app:layout_constraintEnd_toEndOf="@id/btn2Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn1Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh4" />


    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh5"
        app:layout_constraintEnd_toEndOf="@id/btn3Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn2Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh4" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh6"
        app:layout_constraintEnd_toEndOf="@id/btn1Vert_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gh5" />


    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh6"
        app:layout_constraintEnd_toEndOf="@id/btn2Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn1Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh5" />


    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gh6"
        app:layout_constraintEnd_toEndOf="@id/btn3Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn2Vert_guideline"
        app:layout_constraintTop_toBottomOf="@+id/gh5" />


    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="13dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn1Vert_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gh6" />


    <Button
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="13dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent"
        android:text="."
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn2Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn1Vert_guideline"
        app:layout_constraintTop_toTopOf="@+id/gh6" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent2"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/gh4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn3Vert_guideline"
        app:layout_constraintTop_toTopOf="@+id/gh3" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent2"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/gh5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn3Vert_guideline"
        app:layout_constraintTop_toTopOf="@+id/gh4" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/accent2"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/gh6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn3Vert_guideline"
        app:layout_constraintTop_toTopOf="@+id/gh5" />

    <Button
        android:id="@+id/btn_eq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="13dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#005142"
        android:text="="
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn3Vert_guideline"
        app:layout_constraintTop_toTopOf="@+id/gh6" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="13dp"
        android:background="@drawable/background_back"
        android:contentDescription="Back space"
        android:src="@drawable/ic_baseline_backspace_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn3Vert_guideline"
        app:layout_constraintStart_toStartOf="@id/btn2Vert_guideline"
        app:layout_constraintTop_toTopOf="@+id/gh6" />


</androidx.constraintlayout.widget.ConstraintLayout>